# Production Environment Configuration
# Copy this file to terraform.tfvars and fill in the actual values
# NEVER commit terraform.tfvars to version control

aws_region = "us-east-1"
dr_region  = "us-west-2"
vpc_cidr   = "10.100.0.0/16"

# Use multiple availability zones for high availability
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# This should be your production AWS account ID
# account_id = "123456789012"

# Database master password - use a strong password
# database_master_password = "CHANGE_ME_TO_STRONG_PASSWORD"

# Allowed CIDR blocks for access (e.g., corporate office IPs)
# allowed_cidr_blocks = ["1.2.3.4/32", "5.6.7.8/32"]

# SSL certificate ARN from AWS Certificate Manager
# ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/..."